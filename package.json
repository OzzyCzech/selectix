{
  "name": "selectly",
  "version": "2.0.0",
  "description": "Searchable select component for Vue 3 with Tailwind CSS",
  "type": "module",
  "main": "./dist/selectly.umd.cjs",
  "module": "./dist/selectly.js",
  "exports": {
    ".": {
      "import": "./dist/selectly.js",
      "require": "./dist/selectly.umd.cjs"
    },
    "./style.css": "./dist/selectly.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build --config vite.config.lib.js",
    "build:demo": "vite build",
    "preview": "vite preview --outDir dist-demo"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "keywords": [
    "vue",
    "vue3",
    "select",
    "search",
    "dropdown",
    "tailwind",
    "component"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/OzzyCzech/selectly"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-vue": "^5.2.4",
    "tailwindcss": "^4.1.18",
    "vite": "^6.4.1",
    "vue": "^3.5.28"
  }
}
